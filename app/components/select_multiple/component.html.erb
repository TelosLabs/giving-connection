<div data-controller="select-multiple dropdown" data-action="click-select-multiple#focus click->dropdown#show click@window->dropdown#hide"
  class="relative flex flex-wrap w-full mt-1 text-base border cursor-text min-h-46px rounded-6px text-grey-3" data-select-multiple-target="container" data-dropdown-target="button">
  <div class="flex flex-wrap flex-shrink-0 max-w-full gap-2 py-2 pl-2" data-select-multiple-target="badgesContainer" >
  </div>
  <input type="text" data-select-multiple-target="input" class="h-full border-0 border-transparent focus:outline-none focus:border-transparent focus:ring-0 rounded-6px">
  <div data-dropdown-target="menu" class="absolute left-0 hidden w-full mt-2 top-full max-h-52" >
    <div class="p-5 overflow-y-auto bg-white border rounded border-grey-5 max-h-52">
      <div class="flex flex-col gap-y-2">
        <% @items.each do |item, value|%>
          <div class="flex flex-row">
            <%= check_box_tag item, {}, false, class: "h-4 w-4 mt-1 mr-2 rounded-6px text-base text-blue-medium focus:border-0 focus:ring-0 focus:ring-transparent",
            data: { 'select-multiple-target': "checkbox", action: 'click->select-multiple#select'} %>
            <%= label_tag "#{@name}[#{item}]", value, for: item, class: "text-sm text-black " %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%# Badege Template %>
  <span class="hidden bg-blue-medium py-0.5 pl-2 pr-1 inline-flex items-center text-xs text-white flex-shrink-0 rounded-6px" data-select-multiple-target="badgeTemplate">
    <span>
    </span>
    <button type="button" data-action='click->select-multiple#remove' class="flex-shrink-0 ml-0.5 h-4 w-4 rounded-full inline-flex items-center justify-center text-indigo-400 hover:bg-indigo-200 hover:text-indigo-500 focus:outline-none focus:bg-indigo-500 focus:text-white">
      <span class="sr-only">Remove large option</span>
      <svg class="w-2 h-2 text-white" stroke="currentColor" fill="none" viewBox="0 0 8 8">
        <path stroke-linecap="round" stroke-width="1.5" d="M1 1l6 6m0-6L1 7" />
      </svg>
    </button>
  </span>
</div>

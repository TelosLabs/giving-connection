<div class="inset-x-0 top-0 z-10 px-6 py-8 bg-gradient-to-r from-blue-gradient-2 to-blue-gradient-1">
  <div class="flex flex-row items-center justify-center md:gap-5">
    <div class="flex relative w-full max-w-xl h-46px" data-controller="search-bar">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <%= inline_svg_tag "solid_search.svg", class: 'h-4 w-4 fill-current text-gray-2' %>
      </div>
      <%= @form.search_field :keyword, value: "#{ params.dig('search', 'keyword') }", class: 'block pl-8 h-46px w-2/3 py-3.5 px-4 rounded-6px rounded-r-none border-0 border-r text-base text-gray-3 focus:outline-none', placeholder: 'Try “Mental Health Nonprofits”'%>
      <%= @form.hidden_field :lat, value: params.dig('search', 'lat'), id: 'hidden_lat', data: { 'search-bar-target': "lat"} %>
      <%= @form.hidden_field :lon, value: params.dig('search','lon'), id: 'hidden_lon',  data: { 'search-bar-target': "lon"} %>
      <%= @form.select 'location_search', @location, { }, id: "location",  selected: "#{ params.dig('search', 'city') }", class: "m-0 w-1/3 rounded-l-none rounded-r-6px border-0 text-base text-gray-3 focus:outline-none", data: { action: '' }, prompt: 'true' %>
    </div>
    <%= @form.submit 'Search', class: 'invisible w-0 md:w-36 p-0 md:visible md:flex cursor-pointer uppercase flex-row justify-center items-center bg-seafoam md:py-4 md:px-10 rounded-6px text-blue-dark text-base font-bold focus:outline-none mx-2'%>
  </div>
</div>